<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rank_shouyi_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <TextView
        android:id="@+id/rank_shouyi_textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:drawableLeft="@drawable/rank_flat"
        android:text="69"
        android:textColor="#6a3837"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rank_shouyi_textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="股神传人"
        android:textColor="#6a3837"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rank_shouyi_textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:drawableLeft="@drawable/rank_gold_coins"
        android:gravity="center"
        android:text="500"
        android:textColor="#6a3837"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/rank_shouyi_zhui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_gold_selector"
            android:text="追踪"
            android:textColor="@color/custom_font"
            android:layout_marginRight="5dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/rank_shouyi_guanzhu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_gold_selector"
            android:text="取消关注"
            android:layout_marginLeft="5dp"
            android:textColor="@color/custom_font"
            android:textSize="12sp" />

        <Button
            android:id="@+id/rank_shouyi_jiang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_green_selector"
            android:text="领取奖励"
            android:textColor="@color/custom_font"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>