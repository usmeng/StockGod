<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:padding="2dp" >

    <RadioGroup
        android:id="@+id/help_radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <RadioButton
            android:id="@+id/help_bangzhu"
            style="@style/main_tab_bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/check_btn_bg"
            android:checked="true"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="帮助"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/help_kefu"
            style="@style/main_tab_bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/check_btn_bg"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="客服"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@drawable/main_circle_bg"
        android:padding="1dp" >

        <ListView
            android:id="@+id/help_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:cacheColorHint="@color/transparent"
            android:divider="@null"
            android:padding="0dp"
            android:visibility="gone" >
        </ListView>

        <LinearLayout
            android:id="@+id/help_kefu_layout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:orientation="vertical"
            android:padding="0dp" >

            <RadioGroup
                android:id="@+id/kefu_radiogroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp" >

                <RadioButton
                    android:id="@+id/kefu_normal"
                    style="@style/main_tab_bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/check_btn_bg1"
                    android:checked="true"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:text="普通用户"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/kefu_vip"
                    style="@style/main_tab_bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/check_btn_bg1"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:text="VIP用户"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RadioGroup>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/itemcolor0"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="咨询游戏问题"
                            android:textColor="@color/black" />

                        <RadioButton
                            android:id="@+id/radio1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="盗号受理类"
                            android:textColor="@color/black" />
                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/itemcolor1"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="非法举报类"
                            android:textColor="@color/black" />

                        <RadioButton
                            android:id="@+id/radio3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="充值问题"
                            android:textColor="@color/black" />
                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/radioGroup3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/itemcolor0"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radio4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bug与建议反馈"
                            android:textColor="@color/black" />

                        <RadioButton
                            android:id="@+id/radio5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="其他"
                            android:textColor="@color/black" />
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/help_value_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:visibility="gone" >

                        <LinearLayout
                            android:id="@+id/help_value_layout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible" >

                            <TextView
                                android:id="@+id/help_name_textView1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="2dp"
                                android:text="充值订单号："
                                android:textColor="#6a3837" />

                            <EditText
                                android:id="@+id/help_name_edittext1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:layout_weight="2"
                                android:background="@drawable/edit_bg"
                                android:singleLine="false" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/help_value_layout2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:visibility="visible" >

                            <TextView
                                android:id="@+id/help_name_textView2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="2dp"
                                android:text="充值金额："
                                android:textColor="#6a3837" />

                            <EditText
                                android:id="@+id/help_name_edittext2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:layout_weight="2"
                                android:background="@drawable/edit_bg"
                                android:singleLine="false" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/kefu_textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="详细记录：至少输入8个字，还可以输入70个字."
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/kefu_editText1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edit_bg"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="textPostalAddress"
                        android:minLines="3"
                        android:singleLine="false" >
                    </EditText>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_yellow_selector"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="确定输入"
                        android:textColor="@color/white" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>