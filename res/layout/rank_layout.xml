<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" >

            <RadioButton
                style="@style/main_tab_bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/check_btn_bg"
                android:checked="true"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="炒股竞技收益排行榜"
                android:textColor="#6a3837"
                android:textSize="15sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/main_circle_bg"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp" >

            <RadioGroup
                android:id="@+id/rank_shouyi_radiogroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="3dp" >

                <RadioButton
                    android:id="@+id/rank_shouyi_all"
                    style="@style/main_tab_bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/check_btn_bg2"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:text="总收益"
                    android:checked="true"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rank_shouyi_month"
                    style="@style/main_tab_bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/check_btn_bg2"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:text="月收益"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rank_shouyi_week"
                    style="@style/main_tab_bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/check_btn_bg2"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:text="周收益"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rank_shouyi_day"
                    style="@style/main_tab_bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/check_btn_bg2"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:text="日收益"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="排名"
                    android:gravity="center_horizontal"
                    android:textColor="#6a3837" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="用户名"
                    android:gravity="center_horizontal"
                    android:textColor="#6a3837" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="收益数"
                    android:singleLine="true"
                    android:gravity="center_horizontal"
                    android:textColor="#6a3837" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="追踪"
                    android:gravity="center_horizontal"
                    android:textColor="#6a3837" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="关注"
                    android:gravity="center_horizontal"
                    android:textColor="#6a3837" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@drawable/under_line" />

            <ListView
                android:id="@+id/rank_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/line3" />
        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rank_game_radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="3dp" >

        <RadioButton
            android:id="@+id/rank_jingji_game"
            style="@style/main_tab_bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/check_btn_bg"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:checked="true"
            android:text="炒股竞技收益排行榜"
            android:textColor="#6a3837"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rank_moni_game"
            style="@style/main_tab_bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/check_btn_bg"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="模拟炒股收益排行榜"
            android:textColor="#6a3837"
            android:textSize="15sp" />
    </RadioGroup>

</RelativeLayout>