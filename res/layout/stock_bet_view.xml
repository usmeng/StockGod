<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="参赛金币"
        android:textColor="#6c3938"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/choose_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/guess_set_button1"
            style="@style/tab_item_background_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_grey_selector"
            android:gravity="center"
            android:textColor="#6c3938" />

        <Button
            android:id="@+id/guess_set_button2"
            style="@style/tab_item_background_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_grey_selector"
            android:gravity="center"
            android:textColor="#6c3938" />

        <Button
            android:id="@+id/guess_set_button3"
            style="@style/tab_item_background_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_grey_selector"
            android:gravity="center"
            android:textColor="#6c3938" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/guess_set_auto_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/edit_bg"
            android:gravity="center_vertical"
            android:hint="手动输入"
            android:inputType="number"
            android:maxEms="9"
            android:singleLine="true"
            android:textColor="#6c3938" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/guess_set_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_yellow_selector"
            android:gravity="center"
            android:text="确定参赛"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>