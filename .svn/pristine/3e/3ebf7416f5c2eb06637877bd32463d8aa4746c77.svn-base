<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rank_game_radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <RadioButton
            android:id="@+id/rank_jingji_game"
            style="@style/main_tab_bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/check_btn_bg"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="炒股竞技收益排行榜"
            android:textColor="#6a3837"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rank_moni_game"
            style="@style/main_tab_bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/check_btn_bg"
            android:checked="true"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="模拟炒股收益排行榜"
            android:textColor="#6a3837"
            android:textSize="15sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_circle_bg"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/rank_shouyi_radiogroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="3dp" >

            <RadioButton
                android:id="@+id/rank_shouyi_month"
                style="@style/main_tab_bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/check_btn_bg2"
                android:checked="true"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="总收益"
                android:textColor="#6a3837"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rank_shouyi_all"
                style="@style/main_tab_bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/check_btn_bg2"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="日收益"
                android:textColor="#6a3837"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rank_shouyi_week"
                style="@style/main_tab_bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/check_btn_bg2"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="月收益"
                android:textColor="#6a3837"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rank_shouyi_day"
                style="@style/main_tab_bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/check_btn_bg2"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="周收益"
                android:textColor="#6a3837"
                android:textSize="15sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/titlt_middle"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="排名"
                android:textColor="#6a3837" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="用户名"
                android:textColor="#6a3837" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="月收益"
                android:textColor="#6a3837" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="追踪"
                android:textColor="#6a3837" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关注"
                android:textColor="#6a3837" />
        </LinearLayout>


        <ListView
            android:id="@+id/rank_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/line3"/>
    </LinearLayout>

</LinearLayout>