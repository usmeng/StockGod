<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#ffD7C9AC"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pankou_wai_pan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="外盘:"
                android:gravity="right"
                android:textColor="#6a3837" />

            <TextView
                android:id="@+id/pankou_wai_pan_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center"
                android:text="14.7万"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/pankou_nei_pan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="内盘:"
                android:gravity="right"
                android:textColor="#6a3837" />

            <TextView
                android:id="@+id/pankou_nei_pan_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="2.28万"
                android:gravity="center"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pankou_wei_bi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="委比:"
                android:gravity="right"
                android:textColor="#6a3837" />

            <TextView
                android:id="@+id/pankou_wei_bi_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="9.06%"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/pankou_wei_cha"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="委差:"
                android:gravity="right"
                android:textColor="#6a3837" />

            <TextView
                android:id="@+id/pankou_wei_cha_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center"
                android:text="1050"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/pankou_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/line3">
    </ListView>

</LinearLayout>