<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/myinfo_image_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/user_men" />

        <TextView
            android:id="@+id/myinfo_image_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/myinfo_image_textView1"
            android:layout_alignBottom="@+id/myinfo_image_textView1"
            android:layout_toRightOf="@+id/myinfo_image_textView1"
            android:textColor="@color/black"
            android:text="大富翁" />

        <TextView
            android:id="@+id/myinfo_image_textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/myinfo_image_textView2"
            android:layout_alignBottom="@+id/myinfo_image_textView2"
            android:layout_alignLeft="@+id/myinfo_image_textView3"
            android:textColor="@color/black"
            android:text="123456" />

        <Button
            android:id="@+id/infor_change_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/myinfo_image_imageView1"
            android:layout_below="@+id/myinfo_image_imageView1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_blue_selector"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="改变"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/myinfo_image_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/myinfo_image_imageView1"
            android:layout_toRightOf="@+id/myinfo_image_imageView1"
            android:text="账    号："
            android:textColor="#8C3A30" />

        <TextView
            android:id="@+id/myinfo_image_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myinfo_image_textView1"
            android:layout_toRightOf="@+id/myinfo_image_imageView1"
            android:text="昵    称"
            android:textColor="#8C3A30" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myinfo_image_textView2"
            android:layout_toRightOf="@+id/myinfo_image_imageView1"
            android:text="等    级"
            android:textColor="#8C3A30" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/myinfo_image_imageView1"
            android:layout_alignLeft="@+id/textView1"
            android:text="经    验："
            android:textColor="#8C3A30" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/myinfo_image_imageView1"
            android:text="VIP等级："
            android:textColor="#8C3A30" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView3"
            android:textColor="@color/black"
            android:text="5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_below="@+id/textView3"
            android:singleLine="true"
            android:text="升一级还需经验："
            android:textColor="#8C3A30" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:textColor="@color/black"
            android:text="4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_toRightOf="@+id/textView3"
            android:textColor="@color/black"
            android:text="3333" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView8"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/myinfo_image_textView4"
            android:textColor="@color/black"
            android:text="200" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView7"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="加速：%s" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/button1"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="牛人最终有效期：%s" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/textView10"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="VIP有效期：%s" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg_color"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="成就" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="获得条件" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="奖励" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="使用" />
    </LinearLayout>

    <ListView
        android:id="@+id/myinfo_item_listView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/line3"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" >
    </ListView>

</LinearLayout>