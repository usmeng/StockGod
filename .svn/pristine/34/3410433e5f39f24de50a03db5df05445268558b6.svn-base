<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:padding="0dp" >

    <TextView
        android:id="@+id/myinfo_caifu_textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1.4"
        android:gravity="center"
        android:text="中国石油"
        android:textColor="@color/black"  />

    <TextView
        android:id="@+id/myinfo_caifu_textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1.4"
        android:gravity="center"
        android:text="603152"
        android:textColor="@color/black"  />

    <TextView
        android:id="@+id/myinfo_caifu_textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/black"  />

    <TextView
        android:id="@+id/myinfo_caifu_textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="10.00"
        android:textColor="@color/black"  />

    <TextView
        android:id="@+id/myinfo_caifu_textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="+0.5%"
        android:textColor="@color/black"  />

    <TextView
        android:id="@+id/myinfo_caifu_textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="1000"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/myinfo_caifu_button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/white" 
        android:text="卖出"
        android:background="@drawable/btn_blue_selector"/>

</LinearLayout>