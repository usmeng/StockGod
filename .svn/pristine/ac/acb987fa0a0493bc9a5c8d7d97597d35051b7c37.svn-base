<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/title_bg_color"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/myinfo_daoju_textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1.4"
            android:gravity="center"
            android:text="道具"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/myinfo_daoju_textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1.4"
            android:gravity="center"
            android:text="件数"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/myinfo_daoju_textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:text="失效"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/myinfo_daoju_textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:text="简介"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/myinfo_daoju_textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:text="使用"
            android:textColor="@color/black" />
    </LinearLayout>

    <ListView
        android:id="@+id/myinfo_daoju_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/line3"
        android:paddingLeft="1dp"
        android:paddingRight="1dp" >
    </ListView>

</LinearLayout>