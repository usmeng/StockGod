<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp" >

    <RadioGroup
        android:id="@+id/friend_radio_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <RadioButton
            android:id="@+id/friend_radio_dongtai"
            style="@style/main_tab_bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/check_btn_bg"
            android:checked="true"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="动态%s"
            android:textColor="#6a3837"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/friend_radio_zhuizong"
            style="@style/main_tab_bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/check_btn_bg"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="追踪%s"
            android:textColor="#6a3837"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/friend_radio_guanzhu"
            style="@style/main_tab_bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/check_btn_bg"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="关注%s"
            android:textColor="#6a3837"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/friend_radio_fensi"
            style="@style/main_tab_bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/check_btn_bg"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="粉丝%s"
            android:textColor="#6a3837"
            android:textSize="15sp" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/friend_radio_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="1dp"
        android:background="@drawable/main_circle_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/friend_no_niuren"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您尚未追踪任何牛人，请搜索。。" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_yellow_selector"
                android:text="寻找牛人" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="0dp" >

            <LinearLayout
                android:id="@+id/friend_title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:padding="0dp" >

                <TextView
                    android:id="@+id/friend_title_name1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="用户名"
                    android:textColor="#6a3837" />

                <TextView
                    android:id="@+id/friend_title_name2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="等级"
                    android:textColor="#6a3837" />

                <TextView
                    android:id="@+id/friend_title_name3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="VIP"
                    android:textColor="#6a3837" />

                <TextView
                    android:id="@+id/friend_title_name4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="追踪"
                    android:textColor="#6a3837" />

                <TextView
                    android:id="@+id/friend_title_name5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="#6a3837" />
            </LinearLayout>

            <ListView
                android:id="@+id/friend_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/line3"
                android:padding="0dp"  >
            </ListView>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>